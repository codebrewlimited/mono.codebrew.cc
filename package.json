{
    "name": "mono.codebrew.cc",
    "private": true,
    "workspaces": [
        "v1",
        "v2"
    ],
    "scripts": {
        "version:v1": "cd v1 && npx standard-version --no-verify --message \"chore(release): %s [skip ci]\" && cd ..",
        "version:v2": "cd v2 && npx standard-version && cd ..",
        "preversion": "echo 'Preversion hook running...'",
        "postversion": "git push --follow-tags"
    },
    "devDependencies": {
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "17.8.1",
        "husky": "8.0.0",
        "lint-staged": "14.0.0",
        "standard-version": "9.5.0"
    }
}
